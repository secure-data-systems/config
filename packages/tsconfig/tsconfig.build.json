{
	"$schema": "https://json.schemastore.org/tsconfig",
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"baseUrl": ".",
		"declaration": true,
		"esModuleInterop": true,
		"lib": ["ES2022", "DOM"],
		"module": "nodenext",
		"moduleResolution": "nodenext",
		"noImplicitAny": true,
		"resolveJsonModule": true,
		"strictNullChecks": true,
		"target": "esnext",
		"types": ["node"]
	},
	"exclude": ["test.js", "dist", "**/*.spec.ts", "test"]
}